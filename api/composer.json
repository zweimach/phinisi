{
    "name": "phinisi/api",
    "description": "A book management app",
    "homepage": "http://github.com/zweimach/phinisi",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Ananda Umamil",
            "email": "zweimach@zweimach.org",
            "homepage": "https://zweimach.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-random": "*",
        "catfan/medoo": "^2.1",
        "middlewares/trailing-slash": "^2.0",
        "monolog/monolog": "^3.2",
        "php-di/php-di": "^7.0",
        "robmorgan/phinx": "^0.13.1",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5",
        "vlucas/phpdotenv": "^5.1"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.0.4",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^9.3",
        "symplify/easy-coding-standard": "11.2.3.72",
        "vimeo/psalm": "^5.4"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "ecs --fix --quiet",
        "lint": "phpstan analyse --no-progress --quiet && ecs check --quiet",
        "check": "psalm --no-progress --output-format=compact",
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
